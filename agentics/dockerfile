FROM python:3.11-slim

# Dependências de runtime para EasyOCR/OpenCV headless + Poppler (pdf2image) + Tesseract
RUN apt-get update && apt-get install -y --no-install-recommends \
    libgl1 libglib2.0-0 poppler-utils \
    tesseract-ocr tesseract-ocr-por tesseract-ocr-eng \
    ocrmypdf ghostscript qpdf && \
    rm -rf /var/lib/apt/lists/*

WORKDIR /app
COPY requirements.txt ./requirements.txt

# Garanta que requirements.txt contenha: PyMuPDF, easyocr, numpy, pillow
# Ex.: 
# PyMuPDF==1.24.9
# easyocr==1.7.1
# numpy>=2.1,<3
# Pillow==10.4.0
# fastapi==0.115.0
# uvicorn[standard]==0.31.0
# (mantenha PyPDF2/pdfminer.six se ainda usa a leitura textual direta)
RUN pip install --no-cache-dir --index-url https://download.pytorch.org/whl/cpu torch==2.4.1+cpu torchvision==0.19.1+cpu
RUN pip install --no-cache-dir easyocr==1.7.1 --no-deps
RUN pip install --no-cache-dir -r requirements.txt

COPY . .

# Porta da API
EXPOSE 8000

# Variáveis padrão para performance do OCR
ENV OCR_MAX_PAGES=1 OCR_DPI=200 PYTHONPATH=/app

# Suba a API FastAPI (pacote agentics)
CMD ["python", "-m", "uvicorn", "agentics.api.main:app", "--host", "0.0.0.0", "--port", "8000", "--app-dir", "/app"]